@model TravelWeb.Models.Booking
@{
    ViewData["Title"] = "Booking Thành Công";
    var tour = ViewBag.Tour as TravelWeb.Models.Tour;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-check-circle"></i> Thành Công
                    </h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                        </div>
                    }
                    <h4>Cảm ơn bạn đã đặt tour với Việt Lữ Travel!</h4>
                    <p>Thông tin booking của bạn đã được ghi nhận. Vui lòng kiểm tra email để xem chi tiết.</p>
                    <div class="tour-info mb-4 p-3 bg-light rounded">
                        <h5>Chi tiết booking:</h5>
                        <p><strong>Mã Booking:</strong> #@Model.Id</p>
                        <p><strong>Tên Tour:</strong> @tour?.Name</p>
                        <p><strong>Ngày khởi hành:</strong> @Model.DepartureDate.ToString("dd/MM/yyyy")</p>
                        <p><strong>Số lượng khách:</strong> @Model.PeopleCount người</p>
                        <p><strong>Tổng chi phí:</strong> @Model.TotalAmount.ToString("N0") VNĐ</p>
                        <p><strong>Số tiền cọc (40%):</strong> @((Model.TotalAmount * 0.4m).ToString("N0")) VNĐ</p>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Vui lòng hoàn tất thanh toán cọc 40% để xác nhận booking. Nếu bạn chưa được chuyển hướng đến trang thanh toán, hãy liên hệ hỗ trợ.
                    </div>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("ExportToPdf", "Booking", new { bookingId = Model.Id })" class="btn btn-outline-danger">
                            <i class="fas fa-file-pdf"></i> Tải file PDF
                        </a>

                        <a href="@Url.Action("Index", "Tour")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>