@page
@model TravelWeb.Areas.Identity.Pages.Account.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Việt Lữ Travel | Register"; // Đã giữ nguyên Title của bạn
}

<head>
    <link rel="stylesheet" href="~/css/register.css" />
    <!-- Đảm bảo đường dẫn đến tệp CSS của bạn là chính xác -->
</head>

<div class="register-container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-12">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Vui lòng nhập thông tin đăng ký Việt Lữ Travel.</h2> <!-- Đã giữ nguyên text của bạn -->
                <hr />
                <!-- ĐIỂM SỬA CHỮA QUAN TRỌNG: Đã thay đổi từ ModelOnly sang All để hiển thị TẤT CẢ các lỗi -->
                <div asp-validation-summary="All" class="text-danger validation-summary-errors" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
               
                <!-- Đã giữ nguyên comment out phần Role -->
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng ký</button>
            </form>
        </div>
