@model TravelWeb.Models.Booking
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa đặt tour";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary">✏️ Chỉnh sửa đơn đặt tour</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label">Họ tên khách</label>
        <input asp-for="CustomerName" class="form-control" placeholder="Nhập họ tên khách" required />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email khách" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PeopleCount" class="form-label">Số người</label>
        <input asp-for="PeopleCount" type="number" min="1" class="form-control" placeholder="Số lượng người đi tour" required />
        <span asp-validation-for="PeopleCount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BookingDate" class="form-label">Ngày đặt</label>
        <input asp-for="BookingDate" type="date" class="form-control" required />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label">Tổng tiền (VNĐ)</label>
        <input asp-for="TotalAmount" type="number" min="0" step="1000" class="form-control" placeholder="Tổng tiền" required />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TourId" class="form-label">Tour</label>
        <select asp-for="TourId" asp-items="ViewBag.Tours" class="form-select" required>
            <option value="">-- Chọn tour --</option>
        </select>
        <span asp-validation-for="TourId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success me-2">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
