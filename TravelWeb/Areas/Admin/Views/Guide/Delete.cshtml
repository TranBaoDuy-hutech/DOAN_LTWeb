@model TravelWeb.Models.Guides
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Xóa hướng dẫn viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc muốn xóa hướng dẫn viên này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tên HDV</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Điện thoại</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.IsActive ? "Hoạt động" : "Ngưng hoạt động"</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
