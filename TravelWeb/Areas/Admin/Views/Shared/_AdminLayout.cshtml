@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Việt Lữ Travel Admin</title>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="~/image/logo.png" alt="Logo" style="height: 40px;" class="me-2" />
            <span> Việt Lữ Travel</span>
        </a>
    </nav>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand fw-bold text-warning" asp-area="Admin" asp-controller="Tour" asp-action="Index">WELCOME VIỆT LỮ TRAVEL</a>
        <div class="ms-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <span class="text-white me-3"><i class="fas fa-user-circle me-1"></i> @User.Identity.Name</span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Đăng xuất</button>
                </form>
            }
        </div>
    </nav>

    <div class="container-fluid flex-grow-1">
        <div class="row">
            <aside class="col-md-2 p-3 border-end min-vh-100 sidebar-background">
                <h6 class="text-secondary mb-3">📁 Chức năng</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Tour" asp-action="Index">
                            <i class="fas fa-map-marked-alt me-2"></i>Quản lý Tour
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Booking" asp-action="Index">
                            <i class="fas fa-receipt me-2"></i>Quản lý Đặt Tour
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Guide" asp-action="Index">
                            <i class="fas fa-user-tie me-2"></i>Quản lý Hướng dẫn viên
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <i class="fas fa-users me-2"></i>Quản lý Người dùng
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="thongkeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-chart-bar"></i> Thống kê
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="thongkeDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Statistics" asp-action="Index">
                                    Doanh thu
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Statistics" asp-action="GuideStats">                          
                                    Hướng dẫn viên
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </aside>

            <main class="col-md-10 p-4 main-background">
                @RenderBody()
            </main>
            
        </div>
    </div>

    <footer class="bg-dark text-light py-4 mt-auto border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <p class="mb-1"><strong>Việt Lữ Travel | Admin </strong> - Hệ thống quản trị du lịch chuyên nghiệp.</p>
                    <p class="mb-0">
                        <i class="fas fa-map-marker-alt me-2 text-info"></i>
                        Địa chỉ: Khu Công nghệ cao Xa lộ Hà Nội, Hiệp Phú, Thủ Đức, Hồ Chí Minh, Việt Nam
                    </p>
                    <p class="mb-0">
                        <i class="fas fa-phone me-2 text-info"></i>
                        Điện thoại: 0329810650
                    </p>
                    <p class="mb-0">
                        <i class="fas fa-envelope me-2 text-info"></i>
                        Email: baoduy10072004@gmail.com
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <p class="mb-1">Việt Lữ Travel | Admin hệ thống</p>
                    <p class="mb-0">&copy; 2025 Việt Lữ Travel - by Trần Bảo Duy</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- ✅ Thêm jQuery trước khi các script khác dùng nó -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Các script khác -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
    @RenderSection("Scripts", required: false) 
</body>
</html>

